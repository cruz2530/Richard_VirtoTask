@model IEnumerable<RichardAde.Models.Product>

@{
    ViewData["Title"] = "Home Page";

    // count. The value is reset at the end of every iteration
    int count = 0;

    // An array of images url
    
    List<string> imagesArray = ["1_335x256.jpg", "2_335x256.jpg", "3_335x256.jpg", "4_335x256.jpg"];
}

@section Scripts {
    <script src="~/js/home.js" type="text/javascript"></script>
}



<section class="section-2">
    <div class="picture-slider-container">
        <div class="slick-carousel">
            <div class="image-1" style="background: brown; background-image:url(images/solo-lifestyle.jpeg); background-size:cover; background-repeat:no-repeat;background-position-y: 16%"></div>
            <div class="image-2" style="background-color: blue; background-image:url(images/2people.jpg); background-size:cover; background-repeat:no-repeat; background-position-y: 16%"></div>
            <div class="image-3" style="background-color: grey; background-image:url(images/istockphoto.jpg); background-size:cover; background-repeat:no-repeat; background-position-y: 16%"></div>
        </div>
    </div>
</section>
<section class="section-3">
    <div class="product-container">
        <div class="product-blog grid-x grid-margin-x">
            @foreach (var item in Model)
            {
                <div class="product-card medium-1 large-3 cell">
                    <div class="product-inner">
                        <h1>New Products</h1>
                        <img src="/images/@imagesArray[count]" />
                        <p>@Html.DisplayFor(modelItem => item.Name)</p>
                        <button class="">New Products</button>
                    </div>
                </div>
                count = @count + 1;
            }
            @* reset count to 1. Accommodates the styling *@
            @{count = 0;}
        </div>
        <div class="product-offer-container">
            <h1>Special Offers</h1>
            <div class="product-offer">
                <div class="product-offer-inner grid-x grid-margin-x">
                    @foreach (var item in Model)
                    {
                        
                        <div class="product-card medium-1 large-3 cell">
                            <div class="product-inner">
                                <div class=""
                                     style="
                      background-image: url(/images/@imagesArray[count]);
                      width: 100%;
                      height: 200px;
                      background-repeat: no-repeat;
                        "></div>
                                <div class="offer-content"
                                     style="background-color: #fff; height: 30%">
                                    <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                    <span>£20</span>
                                </div>
                            </div>
                        </div>

                        count = @count + 1;
                    }
                    @* reset count to 1. Accommodates the styling *@
                    @{
                        count = 0;
                    }
                </div>
                <div class="center-btn">
                    <button>View All Offers</button>
                </div>
            </div>
        </div>
        <div class="product-categories">
            <h1 style="text-align: center; color: grey">Product Categories</h1>
            <div class="slick-carousel-2  grid-margin-x" id="product-blog">

                @foreach (var item in Model)
                {
                    <div class="product-card medium-1 large-2 cell">
                        <div class="product-inner">
                            <img src="/images/@imagesArray[count]" />
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                    </div>
                    count = @count + 1;
                }
                @* reset count to 1. Accommodates the styling *@
                @{
                    count = 0;
                }
                
            </div>
        </div>
    </div>
